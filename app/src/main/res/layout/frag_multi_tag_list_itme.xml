<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tag_1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/tag_1_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/tag_red_l">
                <ImageView
                    android:id="@+id/tag_1_delete"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_delete_white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tag_1_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업무자료"
                android:textSize="13dp"
                android:textColor="@color/gray4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tag_2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/tag_2_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/tag_green_l">
                <ImageView
                    android:id="@+id/tag_2_delete"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_delete_white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tag_2_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인자료"
                android:textSize="13dp"
                android:textColor="@color/gray4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tag_3"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/tag_3_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/tag_sky_l">
                <ImageView
                    android:id="@+id/tag_3_delete"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_delete_white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tag_3_name"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공유자료"
                android:textSize="13dp"
                android:textColor="@color/gray4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>